{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Parent Child Map Bundle",
  "type": "object",
  "required": [
    "version",
    "links"
  ],
  "properties": {
    "version": {
      "type": "string"
    },
    "meta": {
      "type": "object"
    },
    "links": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "parent_field_key",
          "child_field_key"
        ],
        "properties": {
          "parent_field_key": {
            "type": "string"
          },
          "parent_trigger": {
            "type": "string"
          },
          "child_field_key": {
            "type": "string"
          },
          "child_requiredness": {
            "type": "string"
          },
          "reason": {
            "type": "string"
          },
          "confidence": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}