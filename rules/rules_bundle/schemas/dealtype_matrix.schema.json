{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Dealtype Matrix Bundle",
  "type": "object",
  "required": [
    "version",
    "rules"
  ],
  "properties": {
    "version": {
      "type": "string"
    },
    "meta": {
      "type": "object"
    },
    "rules": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "deal_type_value",
          "field_key"
        ],
        "properties": {
          "deal_type_value": {
            "type": "string"
          },
          "field_key": {
            "type": "string"
          },
          "requiredness": {
            "type": "string"
          },
          "notes": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}